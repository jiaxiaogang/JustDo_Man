<Page x:ConnectionId='1'
    x:Class="是男人就坚持12秒.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:是男人就坚持12秒"
    
    xmlns:primitives="clr-namespace:Microsoft.Phone.Controls.Primitives;assembly=Microsoft.Phone.Controls.Toolkit"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                     >
    <Page.Resources>
        <ResourceDictionary>
            <Storyboard x:ConnectionId='2' x:Name="sb1"                          >
                <DoubleAnimation Storyboard.TargetName="TransTransform"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="-1500"
                                 Duration="00:00:00.300"></DoubleAnimation>
            </Storyboard>
            <Storyboard x:ConnectionId='3' x:Name="sb2"                          >
                <DoubleAnimation Storyboard.TargetName="TransTransform"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="0"
                                 Duration="00:00:00.300"/>
            </Storyboard>


            <Storyboard x:ConnectionId='4' x:Name="FromFu1500ToFu300"                                        >
                <DoubleAnimation Storyboard.TargetName="TransTransform"
                                 Storyboard.TargetProperty="Y"
                                 From="-1500" To="-300"
                                 Duration="00:00:00.300"></DoubleAnimation>
            </Storyboard>
            <Storyboard x:ConnectionId='5' x:Name="FromFu300DouDon"                                      >
                <DoubleAnimation Storyboard.TargetName="TransTransform"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="-293"
                                 AutoReverse="True"
                                 RepeatBehavior="3X"
                                 Duration="00:00:00.100"></DoubleAnimation>
            </Storyboard>


            <Storyboard x:Name="From0To1500">
                <DoubleAnimation Storyboard.TargetName="TransTransformDown"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="1500"
                                 Duration="00:00:00.300"></DoubleAnimation>
            </Storyboard>
            <Storyboard x:Name="From1500To0">
                <DoubleAnimation Storyboard.TargetName="TransTransformDown"
                                 Storyboard.TargetProperty="Y"
                                 From="1500" To="0"
                                 Duration="00:00:00.300"/>
            </Storyboard>
            
            
            <Storyboard x:ConnectionId='6' x:Name="sbJianBianDonHua0"                                        >
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua1"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="-300"
                                 Duration="00:00:00"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua2"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="-300"
                                 Duration="00:00:00"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua3"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="-300"
                                 Duration="00:00:00"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua4"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="-300"
                                 Duration="00:00:00"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua5"
                                 Storyboard.TargetProperty="Y"
                                 From="0" To="-300"
                                 Duration="00:00:00"/>
            </Storyboard>
            <Storyboard x:Name="sbJianBianDonHua1">
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua1"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="1920"
                                 Duration="00:00:10"
                                 RepeatBehavior="Forever"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua2"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="1920"
                                 Duration="00:00:10"
                                 RepeatBehavior="Forever"
                                 BeginTime="00:00:2"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua3"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="1920"
                                 Duration="00:00:10"
                                 RepeatBehavior="Forever"
                                 BeginTime="00:00:04"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua4"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="1920"
                                 Duration="00:00:10"
                                 RepeatBehavior="Forever"
                                 BeginTime="00:00:06"/>
                <DoubleAnimation Storyboard.TargetName="transJianBianDonHua5"
                                 Storyboard.TargetProperty="Y"
                                 From="-300" To="1920"
                                 Duration="00:00:10"
                                 RepeatBehavior="Forever"
                                 BeginTime="00:00:08"/>
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Name="BackGroundColor" Background="#FFC3C3A0">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Name="TopRec" 
                   Fill="#FFC95504"
                   Grid.ColumnSpan="5"
                   Grid.Row="0">
            <Rectangle.RenderTransform>
                <TranslateTransform x:Name="TransTransform"></TranslateTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Name="BottomRec" 
                   Fill="#FFC95504"
                   Grid.ColumnSpan="5" 
                   Grid.Row="2">
            <Rectangle.RenderTransform>
                <TranslateTransform x:Name="TransTransformDown"></TranslateTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Visibility="Collapsed"
                   Name="CenterRec"
                   Fill="Black"
                   Grid.Column="2"
                   Grid.RowSpan="3"></Rectangle>
        <Grid Name="GridJianBianDonHua"
              Grid.Column="2"
              Grid.RowSpan="3"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Rectangle Name="JianBianDonHuaRec1" Grid.Row="0">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="transJianBianDonHua1"></TranslateTransform>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="Black" Offset="0"></GradientStop>
                        <GradientStop Color="White" Offset="0.4"></GradientStop>
                        <GradientStop Color="White" Offset="0.6"></GradientStop>
                        <GradientStop Color="Black" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Name="JianBianDonHuaRec2" Grid.Row="0">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="transJianBianDonHua2"></TranslateTransform>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="Black" Offset="0"></GradientStop>
                        <GradientStop Color="Red" Offset="0.4"></GradientStop>
                        <GradientStop Color="Red" Offset="0.6"></GradientStop>
                        <GradientStop Color="Black" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Name="JianBianDonHuaRec3" Grid.Row="0">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="transJianBianDonHua3"></TranslateTransform>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="Black" Offset="0"></GradientStop>
                        <GradientStop Color="Blue" Offset="0.4"></GradientStop>
                        <GradientStop Color="Blue" Offset="0.6"></GradientStop>
                        <GradientStop Color="Black" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Name="JianBianDonHuaRec4" Grid.Row="0">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="transJianBianDonHua4"></TranslateTransform>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="Black" Offset="0"></GradientStop>
                        <GradientStop Color="Green" Offset="0.4"></GradientStop>
                        <GradientStop Color="Green" Offset="0.6"></GradientStop>
                        <GradientStop Color="Black" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Name="JianBianDonHuaRec5" Grid.Row="0">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="transJianBianDonHua5"></TranslateTransform>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="Black" Offset="0"></GradientStop>
                        <GradientStop Color="Yellow" Offset="0.4"></GradientStop>
                        <GradientStop Color="Yellow" Offset="0.6"></GradientStop>
                        <GradientStop Color="Black" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
        <Grid Name="GridSmallMan" 
              Grid.Row="1" 
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Name="GridSmallMan2" 
              Grid.Row="1"
              Grid.Column="3"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Name="GridMap"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Name="GridMap2"
              Grid.Row="1"
              Grid.Column="3"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Name="GridControlLeftRight"
              Grid.RowSpan="3"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Opacity="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Name="GridControlLeftRight2"
              Grid.RowSpan="3"
              Grid.Column="3"
              Grid.ColumnSpan="2"
              Opacity="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>





        <Grid Name="GameOverGrid"
              Opacity="0.8" 
              Visibility="Visible" 
              Grid.ColumnSpan="5"
              Grid.RowSpan="3" 
              Canvas.ZIndex="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <Rectangle Name="GameOverRectangle"
                   Fill="Black"
                   Opacity="0.8"
                   Grid.RowSpan="4"></Rectangle>
        <TextBlock Name="GameOverText"
                   Text="是男人就坚持20关" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   FontSize="30"
                   Grid.Row="2"></TextBlock>
        <AppBarButton x:ConnectionId='7' Name="GameOverBtn"
                      Label="开始学习" 
                      Icon="Rotate"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      Grid.Row="3"
                                               ></AppBarButton>
            <TextBlock Name="GameOverScore" 
                       Text="00"
                       FontSize="100"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1"></TextBlock>
            <TextBlock Name="JiRu"
                       Text="最高记录:0步"
                       FontSize="25"
                       Foreground="Green"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="10"
                       Grid.Row="3"></TextBlock>
            <Grid Name="gridMansPhoto" Grid.Row="0" Margin="40,0,40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
         

        </Grid>

        <ListView Name="lvTheme"
                  HorizontalAlignment="Left"
                  Margin="7,0,0,0"
                  VerticalAlignment="Bottom"
                  Grid.RowSpan="3"
                  Width="25"
                  Height="700"
                  Grid.Column="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Rectangle Width="25" Height="25" Fill="{Binding ThemeBackground}"></Rectangle>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView Name="lvThemeBackGround"
                  HorizontalAlignment="Right"
                  Margin="0,0,7,0"
                  VerticalAlignment="Bottom"
                  Grid.RowSpan="3"
                  Grid.Column="4"
                  Width="25"
                  Height="700">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Rectangle Width="25" Height="25" Fill="{Binding ThemeBackground}"></Rectangle>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<AppBarButton Name="StartGame" HorizontalAlignment="Center" VerticalAlignment="Bottom" Label="开始游戏" Click="StartGame_Click"></AppBarButton>-->
        <!--<TextBlock Text="最高记录："></TextBlock>
        <TextBlock Name="txtbHighSco"></TextBlock>-->
        <MediaElement Name="bo" AutoPlay="False" Source="ms-appx:///Medias/bo.mp3"></MediaElement>
        <MediaElement Name="mediaElement" AutoPlay="False" Source="ms-appx:///Medias/gua.mp3"></MediaElement>
    </Grid>
</Page>

